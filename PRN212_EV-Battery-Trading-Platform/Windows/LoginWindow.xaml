<Window x:Class="EVBattery.UI.WPF.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVBattery.UI.WPF.Windows"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:EVBattery.UI.WPF.ViewModels"
        Title="LoginWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid>
        <Border Background="White" Padding="30" CornerRadius="12" Margin="30">
            <StackPanel Margin="10">
                <TextBlock Text="Đăng nhập" FontSize="22" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <TextBox ToolTip="Email hoặc Số điện thoại"
                         Text="{Binding EmailOrPhone, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"/>

                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"
                             Height="35"/>

                <Button Content="Đăng nhập" Command="{Binding LoginCommand}" Height="40"
                        Margin="0,10,0,0"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red"
                           TextWrapping="Wrap" TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="Chưa có tài khoản?" VerticalAlignment="Center"/>
                    <Button Content="Đăng ký" Click="Register_Click" Margin="6,0,0,0" Padding="5"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
