<Window x:Class="EVBattery.UI.WPF.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVBattery.UI.WPF.Windows"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:EVBattery.UI.WPF.ViewModels"
        Title="LoginWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Background="#f2f2f2">
        <Border Background="White" Padding="30" CornerRadius="12" Margin="50"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <StackPanel Margin="10">

                <!-- Title -->
                <TextBlock Text="Đăng nhập"
                           FontSize="24" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Email or Phone -->
                <TextBlock Text="Email hoặc Số điện thoại" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Identifier, UpdateSourceTrigger=PropertyChanged}"
                         Height="35" Margin="0,0,0,10" Padding="5"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" 
                           Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Height="35" Margin="0,0,0,15" Padding="5"/>

                <!-- Login Button -->
                <Button Content="Đăng nhập"
                        Command="{Binding LoginCommand}"
                        Height="40" Margin="0,10,0,0"
                        Background="#0078D7" Foreground="White" FontWeight="Bold"/>

                <!-- Error message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>

                <!-- Register link -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <TextBlock Text="Chưa có tài khoản?" VerticalAlignment="Center"/>
                    <Button Content="Đăng ký"
                            Click="Register_Click"
                            Background="Transparent"
                            Foreground="#0078D7"
                            BorderThickness="0"
                            Margin="5,0,0,0"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
