<Window x:Class="EVBattery.UI.WPF.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVBattery.UI.WPF.Windows"
        xmlns:vm="clr-namespace:EVBattery.UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >
    <Window.DataContext>
        <vm:RegisterViewModel />
    </Window.DataContext>
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Mật khẩu" Margin="0,10,0,5"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>

            <TextBlock Text="Họ và tên" Margin="0,10,0,5"/>
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Số điện thoại" Margin="0,10,0,5"/>
            <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />

            <Button Content="Đăng ký" Command="{Binding RegisterCommand}" Margin="0,20,0,0"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Đã có tài khoản?" VerticalAlignment="Center"/>
                <Button Content="Đăng nhập" Click="Login_Click" Margin="6,0,0,0" Padding="5"/>
            </StackPanel>

        </StackPanel>
        
    </Grid>
    
</Window>
