<Window x:Class="EVBattery.UI.WPF.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EVBattery.UI.WPF.Windows"
        xmlns:vm="clr-namespace:EVBattery.UI.WPF.ViewModels"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >

    <Window.DataContext>
        <vm:RegisterViewModel />
    </Window.DataContext>

    <Grid Background="#f2f2f2">
        <Border Background="White" Padding="30" CornerRadius="12" Margin="50"
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">

            <StackPanel Margin="10">

                <TextBlock Text="Đăng ký tài khoản"
                           FontSize="24" FontWeight="Bold"
                           TextAlignment="Center" Margin="0,0,0,20"/>

                <!-- Full name -->
                <TextBlock Text="Họ và tên" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                         Height="35" Margin="0,0,0,10" Padding="5"/>

                <!-- Email -->
                <TextBlock Text="Email" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Height="35" Margin="0,0,0,10" Padding="5"/>

                <!-- Phone -->
                <TextBlock Text="Số điện thoại" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         Height="35" Margin="0,0,0,10" Padding="5"/>

                <!-- Password -->
                <TextBlock Text="Mật khẩu" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Height="35" Margin="0,0,0,15" Padding="5"/>

                <!-- Register Button -->
                <Button Content="Đăng ký"
                        Command="{Binding RegisterCommand}"
                        Height="40"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,10,0,0"/>

                <!-- Error -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           TextAlignment="Center" Margin="0,10,0,0"/>

                <!-- Login -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,15,0,0">
                    <TextBlock Text="Đã có tài khoản?" VerticalAlignment="Center"/>
                    <Button Content="Đăng nhập"
                            Click="Login_Click"
                            Background="Transparent"
                            Foreground="#0078D7"
                            BorderThickness="0"
                            Margin="5,0,0,0"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>

</Window>
